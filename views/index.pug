                            h3.place #{item.workplace}
                            .location
                                i.fa.fa-map-marker(aria-hidden='true')
                                | #{item.location}
                        .job-meta
                            .title #{item.title}
                            .time #{item.startDate} - #{item.endDate}
                        .job-desc
