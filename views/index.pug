    script(src='/javascripts/jquery.easypiechart.min.js')
    script(src='/javascripts/imagesloaded.pkgd.min.js')
    script(src='/javascripts/isotope.pkgd.min.js')
    script.
        $(function() {
            $('.chart').easyPieChart({
                barColor: '#c2185b',
                scaleColor: false
            });

            /* ======= Isotope plugin ======= */
            /* Ref: http://isotope.metafizzy.co/ */
            // init Isotope    
            var $container = $('.isotope');

            $container.imagesLoaded(function () {
                $('.isotope').isotope({
                    itemSelector: '.item'
                });
            });

            // filter items on click
            $('#filters').on( 'click', '.type', function() {
                var filterValue = $(this).attr('data-filter');
                $container.isotope({ filter: filterValue });
            });

            // change is-checked class on buttons
            $('.filters').each( function( i, typeGroup ) {
                var $typeGroup = $( typeGroup );
                $typeGroup.on( 'click', '.type', function() {
                    $typeGroup.find('.active').removeClass('active');
                    $( this ).addClass('active');
                });
            });

            var navbar = document.getElementById('navbar');
            var navbarPos = navbar.offsetTop;
            $(window).scroll(function () {  
                if ($(window).scrollTop() > navbarPos) {
                    navbar.classList.add('navbar-fixed-top');
                }
                if ($(window).scrollTop() < (navbarPos+1)) {
                    navbar.classList.remove('navbar-fixed-top');
                }
            });

            $(document).on("scroll", onScroll);

            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                $(document).off("scroll");

                $('a').each(function () {
                    $(this).removeClass('active');
                })
                $(this).addClass('active');

                var target = this.hash,
                    menu = target;
                $target = $(target);
                
                $('html, body').stop().animate({
                    'scrollTop': $target.offset().top-75
                }, 500, 'swing', function () {
                    window.location.hash = target;
                    $(document).on("scroll", onScroll);
                });
            });
            
            function onScroll(event){
                var scrollPos = $(document).scrollTop();
                $('#navbar a').each(function () {
                    var currLink = $(this);
                    var refElement = $(currLink.attr("href"));
                    if (refElement.position().top <= scrollPos && refElement.position().top + refElement.height() > scrollPos) {
                        $('#navbar ul li a').parent().removeClass("active");
                        currLink.parent().addClass("active");
                    }
                    else{
                        currLink.parent().removeClass("active");
                    }
                });
            }
        });
